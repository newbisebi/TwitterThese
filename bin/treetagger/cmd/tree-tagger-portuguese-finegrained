#!/bin/sh

# Set these paths appropriately

BIN="/mnt/DATA/Universite/4_These/5_Terrain/Mixte_Twitter/Programme/bin/bin"
CMD="/mnt/DATA/Universite/4_These/5_Terrain/Mixte_Twitter/Programme/bin/cmd"
LIB="/mnt/DATA/Universite/4_These/5_Terrain/Mixte_Twitter/Programme/bin/lib"

TOKENIZER=${BIN}/separate-punctuation
SPLITTER=${CMD}/portuguese-splitter.perl
TAGGER=${BIN}/tree-tagger
ABBR_LIST=${LIB}/portuguese-abbreviations
POST_TAGGING=${CMD}/portuguese-post-tagging
PARFILE=${LIB}/portuguese-finegrained.par

# splitting 
$SPLITTER $* |
# pre-tokenization
sed "s/\([\)\"\'\?\!]\)\([\.\,\;\:]\)/ \1 \2/g" |
# tokenizing
$TOKENIZER +1 +s +l $ABBR_LIST |
# remove empty lines
grep -v '^$' |
# tagging
$TAGGER $PARFILE -token -lemma -sgml | 
$POST_TAGGING -yes
